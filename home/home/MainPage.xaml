<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="home.MainPage"
             NavigationPage.HasNavigationBar="False"
             Visual="Material">
    

    <StackLayout>
        <Frame CornerRadius="204" BackgroundColor="Black" >
            <Image Source="NameApp.png" WidthRequest="300" HeightRequest="350" />
        </Frame>
        <Frame BorderColor="Black" Margin="30,10">
            <Entry Placeholder="Логин" Margin="-15,-15"/>
        </Frame>
        <Frame BorderColor="Black" Margin="30,10">
            <Entry Placeholder="Пароль" IsPassword="True" Margin="-15,-15"/>
        </Frame>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Clicked="GoToRegPageButtonClicked" Text="Зарегистрироваться" Margin="30, 30, 0, 0" BackgroundColor="#00B2FF" BorderColor="Blue" CornerRadius="50" ></Button>
            <Button Clicked="OpenProjectsPageButtonClicked" Text="Войти"  Margin="0, 30, 40, 0" HeightRequest="50" BackgroundColor="#00B2FF" CornerRadius="50" BorderColor="Blue"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
