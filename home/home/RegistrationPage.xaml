<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="home.RegistrationPage"
             NavigationPage.HasNavigationBar="True"
             Visual="Material">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label HorizontalOptions="FillAndExpand" TextColor="White" Text="Регистрация" FontSize="Large"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Frame BorderColor="Black" Margin="30,20">
                <Entry Placeholder="E-mail" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,20">
                <Entry Placeholder="Login" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,20">
                <Entry Placeholder="Password" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,20">
                <Entry Placeholder="Password" Margin="-15,-15"/>
             </Frame>
             <Button Clicked="GoToMainPageButtonClicked" Text="Зарегистрироваться" CornerRadius="50" Margin="50, 40, 50, 0" BackgroundColor="#00B2FF" BorderColor="Blue" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>